<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.password">admin</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:xe</property>
		<property name="hibernate.connection.username">admin</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="hibernate.default_schema">admin</property>
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		
		<mapping class="com.sonar.vishal.medico.common.pojo.Address"/>
		<mapping class="com.sonar.vishal.medico.common.pojo.Store"/>
		<mapping class="com.sonar.vishal.medico.common.pojo.Patient"/>
		<mapping class="com.sonar.vishal.medico.common.pojo.Product"/>
		<mapping class="com.sonar.vishal.medico.common.pojo.Bill"/>
		<mapping class="com.sonar.vishal.medico.common.pojo.Role"/>
		<mapping class="com.sonar.vishal.medico.common.pojo.User"/>
	</session-factory>
</hibernate-configuration>
